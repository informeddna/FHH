<?xml version="1.0" encoding="UTF-8"?>

<web-app id="PO" version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>Glassbox</display-name>

    <!-- Define the basename for a resource bundle for I18N -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>ApplicationResources</param-value>
    </context-param>
    <context-param>
        <param-name>showErrorStackTraces</param-name>
        <param-value>${showErrorStackTraces}</param-value>
    </context-param>
    <context-param>
        <param-name>defaultPageSize</param-name>
        <param-value>${defaultPageSize}</param-value>
    </context-param>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

    <!-- Filters -->
    <filter>
        <filter-name>sessionFixationFilter</filter-name>
        <filter-class>gov.hhs.fhh.web.filter.SessionFixationProtectionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>sessionFixationMigrationFilter</filter-name>
        <filter-class>gov.hhs.fhh.web.filter.SessionFixationMigrateSessionProtectionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>usernameFilter</filter-name>
        <filter-class>com.fiveamsolutions.nci.commons.web.filter.UsernameFilter</filter-class>
    </filter>
    <filter>
        <filter-name>openSessionFilter</filter-name>
        <filter-class>gov.hhs.fhh.web.filter.FhhOpenSessionInViewFilter</filter-class>
    </filter>
    <filter>
        <filter-name>action2-cleanup</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ActionContextCleanUp</filter-class>
    </filter>
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
    </filter>
    <filter>
        <filter-name>action2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
    </filter>
    <filter>
        <filter-name>mshvMagic</filter-name>
        <filter-class>gov.hhs.fhh.web.filter.MSHealthVaultFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>mshvMagic</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sessionFixationFilter</filter-name>
        <url-pattern>*.action</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sessionFixationMigrationFilter</filter-name>
        <url-pattern>/home.action</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>usernameFilter</filter-name>
        <url-pattern>*.action</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>openSessionFilter</filter-name>
        <url-pattern>*.action</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>action2-cleanup</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>action2</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>


    <!-- Welcome file lists -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/index.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/403.jsp</location>
    </error-page>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>protected</web-resource-name>
            <url-pattern>/protected/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>mfhpuser</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/login/login.action</form-login-page>
            <form-error-page>/login/login.action?failedLogin=true</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <description>mfhpuser</description>
        <role-name>mfhpuser</role-name>
    </security-role>
</web-app>
