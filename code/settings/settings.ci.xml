<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <profiles>
        <profile>
            <id>nexus</id>

            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <properties>
                <jboss.configuration>drc</jboss.configuration>
                <log.level.fhh>WARN</log.level.fhh>
                <log.level.default>WARN</log.level.default>
            </properties>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <url>http://central</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>

        <profile>
            <id>quick</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <cobertura.check.haltOnFailure>false</cobertura.check.haltOnFailure>
                <skipTests>true</skipTests>
                <checkstyle.skip>true</checkstyle.skip>
                <pmd.skip>true</pmd.skip>
            </properties>
        </profile>
    </profiles>

    <mirrors>
        <mirror>
            <id>nexus</id>
            <mirrorOf>*</mirrorOf>
            <url>https://ncimvn.nci.nih.gov/nexus/content/groups/public</url>
        </mirror>
    </mirrors>

    <servers>
        <server>
            <id>snapshots</id>
            <username>username</username>
            <password>password</password>
        </server>
        <server>
            <id>releases</id>
            <username>username</username>
            <password>password</password>
        </server>
    </servers>


    <activeProfiles>
        <!-- make the profile active all the time -->
        <activeProfile>nexus</activeProfile>
    </activeProfiles>


    <!-- define the sonatype and 5AM plugin groups so those plugins will work without typing the groupId -->
    <pluginGroups>
        <pluginGroup>org.sonatype.plugins</pluginGroup>
    </pluginGroups>
</settings>
